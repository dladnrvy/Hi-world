<div class="container">
	<div class="row">
		<div class="card col s12" id="cols">
			<div class="card-content" id="cards">
				<div class="card-title" >
					방명록 작성하기
				</div>
				<% if params[:id].nil? %>
					<%= form_tag post_index_path do %>		
						<div class="input-field">
							<%= text_area_tag :content, nil, class: "materialize-textarea", placeholder: "비방 및 욕설을 삼가해주세요!" %>
						</div>
						<div class="input-field">
							<%= button_tag "작성", class: "btn waves-effect waves-light" %>
						</div>
						<% end %>					
				<% else %>		
					<%= form_tag "/post/new/#{params[:p_id]}" do %>
						<div class="input-field">
							<!-- <%= file_field_tag :images %> -->
							<input type="hidden" name="id" ,value="<%= params[:p_id] %>"/>
							<%= text_area_tag :content, nil, class: "materialize-textarea", placeholder: "비방 및 욕설을 삼가해주세요!" %>
						</div>
						<div class="input-field">
							<%= button_tag "작성", class: "btn waves-effect waves-light" %>
						</div>
						<% end %>
				
				<% end %>
				
			</div>
		</div>
	</div>
</div>

