<div class="container">
	<div class="row">
		
		<div class="col s12 m8">
			
				
				
				
			
			
			
			
			<div class="card">
				<div class="card-content">
					
					<span class="card-title">
						
					<div id="back">
					<%= link_to :back, class: "right" do%>
					<span class="waves-effect waves-light btn">뒤로가기</span>
					<% end %>
					</div>
					
					
								<div id="imgDiv">
								<% if @diary.attachment.url %>
								<img src="<%= @diary.attachment.url %>" id="img">
								<% end %>
								</div>
					
						</span>
						<span>
						<%= @diary.d_date %>
							</span>
							
					<p class="pre-line">
					제목 : <%= @diary.d_title %>
					</p>
					<p class="pre-line">
					내용 : <%= @diary.d_post %>
					</p>
					<div class="card-action">
				<% if current_user.id == @diary.user.id %>
					<%= link_to '삭제', "/delete/#{@diary.id}" , :method => 'delete' , class: "right" %>
					<%= link_to '수정', edit_diary_path(@diary), class: "right" %>
					<% end %>
					<br>
				</div>
				
				
				</div>
			</div>
		
		</div>
	</div>
</div>

