<div class="container">
	<div class="row">
		<div class="card col s12" id="cols">
			<div class="card-content" id="cards">
				<div class="card-title" >
					다이어리 작성하기
				</div>
				<%= form_tag diary_index_path, multipart: true do %>
				<br>
				<div class="input-field">
					<%= file_field_tag :attachment %>
					</div>
					
				<div class="input-field">
					<%= text_area_tag :title, nil, class:"materialize-textarea", placeholder: "  제목" %>
					<%= text_area_tag :content, nil, class: "materialize-textarea", placeholder: "  내용" %>
				</div>
				<div class="input-field">
					<%= button_tag "작성", class: "btn waves-effect waves-light" %>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>

